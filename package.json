{
  "name": "autodoc-generator",
  "displayName": "AutoDoc Generator",
  "description": "Automatically generates documentation for functions as they are written.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/Michaelgathara/autodoc.git"
  },
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:python"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "autodoc.generate",
        "title": "AutoDoc: Generate Docs"
      }
    ],
    "configuration": {
      "title": "AutoDoc",
      "properties": {
        "autodoc.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic documentation generation."
        },
        "autodoc.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenRouter API Key for AI generation.",
          "format": "secret"
        },
        "autodoc.model": {
          "type": "string",
          "default": "openai/gpt-4o",
          "description": "OpenRouter model to use (e.g., anthropic/claude-3-haiku, openai/gpt-4o)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "npm run compile -- --sourcemap --watch",
    "package": "npm run compile -- --minify",
    "vsix": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.106.1",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.0",
    "typescript": "^5.9.3"
  }
}
